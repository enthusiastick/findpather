
<h1>Spells Known (<%= @spells.count %>)</h1>

<dl class="tabs vertical" data-tab>
  <% @spells_by_level.each do |level, spells| %>
    <dd class=
      <% if level == 0 %>
        "active"
      <% else %>
        nil
      <% end %>
      ><%= link_to "Level #{level}", "#level-#{level}" %>
    </dd>
  <% end %>
</dl>
<div class="tabs-content vertical">
  <% @spells_by_level.each do |level, spells| %>
    <div class=
      <% if level == 0 %>
        "content active"
      <% else %>
        "content"
      <% end %>
      id="level-<%= level %>">
      <ol>
        <% spells.each do |spell| %>
          <li>
            <%= link_to spell.name, spell.url %> <%= link_to(spell_path(spell)) do %><i class="fi-pencil"></i><% end %>
          </li>
        <% end %>
      </ol>
    </div>
  <% end %>
</div>

<h2>Learn New Spell</h2>
<%= simple_form_for(@spell) do |f| %>
  <%= f.input :name %>
  <%= f.input :url %>
  <%= f.input :level %>
  <%= f.button :submit, 'Learn' %>
<% end %>
